extends layout

append styles
  link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css")
  link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css")

block body
  +l-container
    +l-column.l-column_col_3
      .panel.panel-default
        .panel-heading Выберите сущность
        ul.nav.nav-pills.nav-stacked.panel-body
          each val, index in models
            li(class=val == modelName ? 'active' : 'unactive')
              a(href= '/admin/' + val)= __('entity.' + val)
    +l-column.l-column_col_9
      .panel.panel-default
        .panel-heading= model && model.name ? __('entity.' + model.name) : 'Сущность не выбранна'
        .panel-body
          block main

